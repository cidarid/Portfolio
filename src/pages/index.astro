---
// src/pages/index.astro
const pageTitle = "Spencer Fletcher | Software Engineer";
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Spencer Fletcher — software engineer studying CS at UBC. Experience with compiler tooling, full-stack web platforms, and mobile apps."
		/>
		<title>{pageTitle}</title>

		<link rel="icon" type="image/png" href="/logo.png" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,300..800;1,9..40,300..800&family=DM+Mono:wght@400;500&display=swap"
			rel="stylesheet"
		/>
		<style is:global>
			:root {
				--bg-primary: #0f0f13;
				--bg-card: #1a1a23;
				--bg-card-hover: #22222e;
				--bg-featured: #1c1c2e;
				--text-primary: #f0eff4;
				--text-secondary: #a09fb1;
				--accent: #8b7cf7;
				--accent-glow: rgba(139, 124, 247, 0.15);
				--accent-subtle: rgba(139, 124, 247, 0.08);
				--border: rgba(255, 255, 255, 0.13);
				--font-body:
					"DM Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
				--font-mono: "DM Mono", "SF Mono", monospace;
			}

			* {
				margin: 0;
				box-sizing: border-box;
			}

			body {
				background-color: var(--bg-primary);
				color: var(--text-primary);
				font-family: var(--font-body);
				margin: 0;
				padding: 2rem;
				display: flex;
				justify-content: center;
				line-height: 1.65;
				-webkit-font-smoothing: antialiased;
			}

			.container {
				max-width: 860px;
				width: 100%;
			}

			/* Typography */
			h1 {
				font-size: 3rem;
				font-weight: 700;
				letter-spacing: -0.03em;
				line-height: 1.1;
				margin-bottom: 1.25rem;
			}

			h2 {
				font-size: 1.1rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				color: var(--text-secondary);
				margin-bottom: 1.25rem;
			}

			h3 {
				font-size: 1.2rem;
				font-weight: 600;
				margin-bottom: 0;
			}

			a {
				color: var(--accent);
				text-decoration: none;
				font-weight: 500;
				transition: color 0.2s ease;
			}

			a:hover {
				color: var(--text-primary);
			}

			p {
				margin-bottom: 0;
			}

			strong {
				color: var(--text-primary);
				font-weight: 600;
			}

			main {
				margin-top: 3rem;
			}

			section {
				margin-bottom: 3rem;
			}

			/* Header */
			header {
				padding-bottom: 3rem;
				margin-bottom: 2.5rem;
				border-bottom: 1px solid var(--border);
			}

			.eyebrow {
				font-family: var(--font-mono);
				font-size: 0.8rem;
				color: var(--accent);
				letter-spacing: 0.04em;
				margin-bottom: 0.75rem;
			}

			.subtitle {
				font-size: 1.1rem;
				color: var(--text-secondary);
				line-height: 1.7;
				font-weight: 400;
			}

			.header-cta {
				display: flex;
				gap: 0.75rem;
				margin-top: 2rem;
			}

			.cta-button {
				display: inline-block;
				padding: 0.6rem 1.4rem;
				border-radius: 8px;
				text-decoration: none;
				font-weight: 600;
				font-size: 0.85rem;
				transition: all 0.2s ease;
				border: 1.5px solid var(--accent);
				background: var(--accent);
				color: var(--bg-primary);
				letter-spacing: 0.01em;
			}

			.cta-button:hover {
				background: transparent;
				color: var(--accent);
			}

			.cta-button-secondary {
				background: transparent;
				color: var(--text-primary);
				border-color: var(--border);
			}

			.cta-button-secondary:hover {
				border-color: var(--accent);
				color: var(--accent);
				background: var(--accent-subtle);
			}

			/* Projects */
			.projects-container {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1rem;
			}

			.projects-container article {
				background: var(--bg-card);
				border: 1px solid var(--border);
				border-radius: 12px;
				padding: 1.75rem;
				display: flex;
				flex-direction: column;
				transition: all 0.25s ease;
				position: relative;
			}

			.projects-container article[role="link"]:hover {
				background: var(--bg-card-hover);
				border-color: rgba(255, 255, 255, 0.1);
				transform: translateY(-2px);
			}

			/* Featured project */
			.projects-container article.featured {
				grid-column: 1 / -1;
				background: var(--bg-featured);
				border-color: rgba(139, 124, 247, 0.2);
				padding: 2rem;
			}

			.projects-container article.featured:hover {
				border-color: rgba(139, 124, 247, 0.35);
				box-shadow: 0 8px 32px var(--accent-glow);
			}

			.featured-label {
				font-family: var(--font-mono);
				font-size: 0.7rem;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				color: var(--accent);
				margin-bottom: 0.75rem;
			}

			.year {
				display: inline-block;
				font-family: var(--font-mono);
				font-size: 0.75rem;
				color: var(--text-secondary);
				margin-bottom: 0.75rem;
			}

			.projects-container article p {
				color: var(--text-secondary);
				font-size: 0.925rem;
				line-height: 1.65;
			}

			.projects-container article:last-child:nth-child(even) {
				grid-column: 1;
			}

			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.4rem;
				margin: 1rem 0;
			}

			.tag {
				font-family: var(--font-mono);
				background: var(--accent-subtle);
				color: var(--accent);
				padding: 0.2rem 0.6rem;
				border-radius: 4px;
				font-size: 0.75rem;
				font-weight: 400;
				letter-spacing: 0.02em;
				opacity: 0.75;
			}

			.links {
				display: flex;
				flex-wrap: wrap;
				gap: 1.25rem;
				margin-top: auto;
				padding-top: 0.5rem;
			}

			.links a {
				font-size: 0.85rem;
				font-weight: 500;
				color: var(--accent);
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.links a:hover {
				color: var(--text-primary);
			}

			.note {
				font-style: italic;
				font-size: 0.8rem;
				color: var(--text-secondary);
				opacity: 0.5;
				margin-top: auto;
				padding-top: 0.5rem;
			}

			/* Skills — compact inline layout */
			.skills-inline {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
				gap: 2rem;
			}

			.skill-group h3 {
				font-family: var(--font-mono);
				font-size: 0.75rem;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				color: var(--accent);
				margin-bottom: 0.5rem;
			}

			.skill-group p {
				color: var(--text-secondary);
				font-size: 0.9rem;
				line-height: 1.8;
			}

			/* Footer */
			.social-links {
				display: flex;
				justify-content: center;
				gap: 1.5rem;
				padding: 2rem 0 3rem;
				border-top: 1px solid var(--border);
			}

			.social-links a {
				text-decoration: none;
				opacity: 0.4;
				transition: opacity 0.2s ease;
			}

			.social-links a:hover {
				opacity: 1;
			}

			.social-links img {
				width: 28px;
				height: 28px;
				filter: brightness(0) invert(1);
			}

			/* Responsive */
			@media (max-width: 640px) {
				body {
					padding: 1.25rem;
				}

				h1 {
					font-size: 2.25rem;
				}

				.projects-container {
					grid-template-columns: 1fr;
				}

				.projects-container article.featured {
					grid-column: 1;
				}

				.header-cta {
					flex-wrap: wrap;
				}
			}

			@media (min-width: 768px) {
				body {
					padding: 3rem;
				}

				.skills-inline {
					grid-template-columns: 1fr 1fr 1fr;
				}
			}

			/* Subtle entrance animation */
			@keyframes fadeUp {
				from {
					opacity: 0;
					transform: translateY(12px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			header {
				animation: fadeUp 0.5s ease both;
			}

			.projects {
				animation: fadeUp 0.5s ease 0.1s both;
			}

			.tools {
				animation: fadeUp 0.5s ease 0.2s both;
			}

			.social-links {
				animation: fadeUp 0.5s ease 0.3s both;
			}

			.footer-email {
				font-family: var(--font-mono);
				font-size: 0.8rem;
				color: var(--text-secondary);
				opacity: 0.6;
				align-self: center;
			}

			.projects-container article[role="link"] {
				cursor: pointer;
			}

			.projects-container article[role="link"]:focus-visible {
				outline: 2px solid var(--accent);
				outline-offset: 2px;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<main>
				<header>
					<div class="header-content">
						<p class="eyebrow">UBC Computer Science · 3.9 GPA · US Based</p>
						<h1>Spencer Fletcher</h1>
						<p class="subtitle">
							I've worked on compiler tooling, full-stack web platforms, and
							mobile apps. Right now I'm deep in parallel computing and security
							coursework and overhauling my recipe platform. Looking for
							software engineering roles starting fall 2026.
						</p>
					</div>

					<div class="header-cta">
						<a href="mailto:spencer@spencerfletcher.com" class="cta-button">
							Email Me
						</a>
						<a
							target="_blank"
							href="/Spencer_Fletcher.pdf"
							class="cta-button cta-button-secondary">Resume ↗</a
						>
					</div>
				</header>

				<section class="projects">
					<h2>Projects</h2>

					<div class="projects-container">
						<article
							class="featured"
							onclick="window.open('https://github.com/cidarid/MemoryGuard', '_blank')"
							role="link"
							tabindex="0"
						>
							<div class="featured-label">Featured</div>
							<h3>MemoryGuard</h3>
							<span class="year">2024</span>
							<p>
								A Clang/LLVM-based memory safety tool for C programs. Combines
								static instrumentation with dynamic runtime analysis to detect
								dangling pointers, memory leaks, and double-frees, generating
								annotated, syntax-highlighted error reports with precise source
								locations.
							</p>
							<div class="tags">
								<span class="tag">C++</span>
								<span class="tag">Clang/LLVM</span>
								<span class="tag">CMake</span>
								<span class="tag">Python</span>
							</div>
							<div class="links">
								<a target="_blank" href="https://github.com/cidarid/MemoryGuard"
									>View Code →</a
								>
							</div>
						</article>

						<article
							onclick="window.open('https://cps.med.ubc.ca/body-donation/', '_blank')"
							role="link"
							tabindex="0"
						>
							<h3>UBC Cadaver Donation Website</h3>
							<span class="year">2022-2023</span>
							<p>
								Redesigned UBC's Cadaver Donation Program webpage, driving a
								<strong>100%+ increase in donations</strong>. Also overhauled a
								staff directory serving hundreds of users, improving
								<strong>search speed by 250%</strong>.
							</p>
							<div class="tags">
								<span class="tag">HTML</span>
								<span class="tag">CSS</span>
								<span class="tag">JavaScript</span>
								<span class="tag">WordPress</span>
							</div>
							<div class="links">
								<a
									target="_blank"
									href="https://github.com/cidarid/body-donation-site"
									>View Code →</a
								>
								<a target="_blank" href="https://cps.med.ubc.ca/body-donation/"
									>Live Project →</a
								>
							</div>
						</article>

						<article
							onclick="window.open('https://github.com/cidarid/RecipeBook', '_blank')"
							role="link"
							tabindex="0"
						>
							<h3>Collaborative Recipe Book</h3>
							<span class="year">In Development</span>
							<p>
								A full-stack recipe platform with <strong
									>Git-style version control</strong
								> for tracking recipe modifications and forking others' recipes. Built
								with SvelteKit and PostgreSQL, featuring user auth, image storage,
								and a public feed.
							</p>
							<div class="tags">
								<span class="tag">SvelteKit</span>
								<span class="tag">PostgreSQL</span>
								<span class="tag">TypeScript</span>
							</div>
							<div class="links">
								<a target="_blank" href="https://github.com/cidarid/RecipeBook"
									>View Code →</a
								>
							</div>
						</article>

						<article
							onclick="window.open('https://github.com/cidarid/RemoteControl', '_blank')"
							role="link"
							tabindex="0"
						>
							<h3>Remote Control Mobile App</h3>
							<span class="year">In Development</span>
							<p>
								A Swift iOS app that turns your phone into a remote input device
								for desktop control — supporting mouse, media, and presentation
								control over a local network.
							</p>
							<div class="tags">
								<span class="tag">Swift</span>
								<span class="tag">iOS</span>
							</div>
							<div class="links">
								<a
									target="_blank"
									href="https://github.com/cidarid/RemoteControl">View Code →</a
								>
							</div>
						</article>

						<article>
							<h3>Hollywood Theatre Automation</h3>
							<span class="year">2024 · Freelance</span>
							<p>
								Built tooling for the Hollywood Theatre in Vancouver — a
								web-based marquee letter tracker and a tip-splitting system,
								saving <strong>5+ hours of manual work weekly</strong>.
							</p>
							<div class="tags">
								<span class="tag">JavaScript</span>
								<span class="tag">Google Apps Script</span>
							</div>
							<p class="note">Source unavailable — client project.</p>
						</article>
					</div>
				</section>

				<section class="tools">
					<h2>Technical Skills</h2>
					<div class="skills-inline">
						<div class="skill-group">
							<h3>Programming</h3>
							<p>
								Python · TypeScript · JavaScript · Java · C/C++ · Assembly ·
								Erlang · R
							</p>
						</div>
						<div class="skill-group">
							<h3>Web & Frameworks</h3>
							<p>
								SvelteKit · Next.js · Django · Node.js · React Native · Tailwind
							</p>
						</div>
						<div class="skill-group">
							<h3>Infrastructure</h3>
							<p>Git · Docker · PostgreSQL · AWS · CI/CD · Clang/LLVM</p>
						</div>
						<div class="skill-group">
							<h3>Languages</h3>
							<p>Spanish · German (Conversational)</p>
						</div>
					</div>
				</section>
			</main>

			<footer class="social-links">
				<a
					href="https://github.com/cidarid"
					target="_blank"
					rel="noopener noreferrer"
					aria-label="GitHub Profile"
				>
					<img src="/github.svg" height="24" width="24" alt="" />
				</a>
				<a
					href="https://www.linkedin.com/in/spencer-fletcher-890b19237"
					target="_blank"
					rel="noopener noreferrer"
					aria-label="LinkedIn Profile"
				>
					<img src="/linkedin.png" height="24" width="24" alt="" />
				</a>
				<a href="mailto:spencer@spencerfletcher.com" class="footer-email">
					spencer@spencerfletcher.com
				</a>
			</footer>
		</div>
		<script>
			document
				.querySelectorAll(".projects-container article[role='link']")
				.forEach((article) => {
					// Stop link clicks from also triggering the card's onclick
					article.querySelectorAll(".links a").forEach((a) => {
						a.addEventListener("click", (e) => e.stopPropagation());
					});
					// Enable keyboard navigation (Enter/Space) on cards
					article.addEventListener("keydown", (e) => {
						const event = e as KeyboardEvent;
						if (event.key === "Enter" || event.key === " ") {
							e.preventDefault();
							(article as HTMLElement).click();
						}
					});
				});
		</script>
	</body>
</html>

---
export interface Props {
	title: string;
	body: string;
	tools: string[];
	code?: string;
	proj?: string;
	notes?: string;
}

const { title, body, tools, code, proj, notes } = Astro.props;
---

<div class="project">
	<h3>{title}</h3>
	<p>{body}</p>
	<p class="tech-pill-container">
		{tools.map((tool) => <span class="tech-pill">{tool}</span>)}
	</p>
	<div>
		<a href={code} target="_blank">{code ? "View Code" : null}</a>
		{code && proj ? <br /> : null}
		<a href={proj} target="_blank">{proj ? "Live Project" : null}</a>
		{notes ? <p>{notes}</p> : null}
	</div>
</div>

<style>
	div.project {
		box-sizing: border-box;
		flex-basis: 50%;
		min-width: 250px;
		max-width: 500px;
		text-align: left;
		display: flex;
		flex-direction: column;
		gap: 10px;
		padding: 10px;
		padding-top: 0px;
		padding-bottom: 18px;
		flex-grow: 1;
	}

	h3 {
		font-size: 20px;
		font-weight: 450;
	}

	div > * {
		margin: 0;
	}

	a {
		color: #f6f6f6;
	}

	a:hover {
		color: #0d6efd;
	}

	.tech-pill-container {
		display: flex;
		flex-wrap: wrap;
		gap: 6px; /* This creates consistent space between items, both horizontally and vertically */
	}

	.tech-pill {
		display: inline-flex;
		align-items: center;
		padding: 4px 12px;
		background-color: #5d5cb6;
		border-radius: 9999px;
		font-size: 0.875rem;
		font-weight: 500;
		color: #f6f6f6;
		/* margin: 3px; */ /* <--- Remove this line */
	}
</style>
